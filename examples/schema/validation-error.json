{
    "schema": "http://json-schema.org/draft-04/schema#",
    "title": "validation_error/validation_error/1.0",
    "type": "object",
    "properties": {
        "schema": {
            "type": "string",
            "format": "uri"
        },
        "meta": {
            "type": "object",
            "properties": {
                "date": {
                    "type": "string",
                    "format": "date-time"
                },
                "uuid": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89aAbB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
                },
                "service": {
                    "type": "string"
                },
                "hostname": {
                    "type": "string"
                }
            },
            "required": [
                "date",
                "uuid",
                "service",
                "hostname"
            ]
        },
        "event": {
            "type": "object"
        },
        "errors": {
            "type": "array"
        }
    },
    "required": [
        "schema",
        "meta",
        "event",
        "errors"
    ]
}
